"global_options": {
    "numnodes": "8",
    "ppn": "1",
    "allocationmode": "l",
    "allocationsplit": "e",
    "minruns": "5",
    "maxruns": "10",
    "timeout": "3600.0",
    "convergeall": true,
    "outformat": "csv",
    "extrainfo": "multi_experiment_demo_2nodes",
    
    "sbatch_directives": {
        "account": "IscrB_SWING",
        "partition": "boost_usr_prod",
