{
    "global_options": {
        "numnodes": "8",
        "ppn": "1",
        "allocationmode": "p",
        "partitionsplit": "50:50",
        "allocationsplit": "100-100",
        "minruns": "1",
        "maxruns": "1",
        "timeout": "1200.0",
        "outformat": "csv",
        "extrainfo": "new_features_test",
        "sbatch_directives": {
            "time": "00:20:00",
            "job-name": "crab_new_feat"
        }
    },
    "experiments": {
        "01_baseline_sequential": {
            "description": "Baseline: Esecuzione sequenziale di A2A su partizione Vittima (met√† nodi). Nessun aggressore.",
            "apps": {
                "0": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 1024 -iter 100",
                    "collect": true,
                    "partition": "0",
                    "start": "0",
                    "end": ""
                },
                "1": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 1048576 -iter 50",
                    "collect": true,
                    "partition": "0",
                    "start": "s0",
                    "end": ""
                }
            }
        },
        "02_interference_incast": {
            "description": "Interferenza: A2A (Vittima) vs Incast (Aggressore).",
            "apps": {
                "0": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 1048576 -iter 100",
                    "collect": true,
                    "partition": "0",
                    "start": "0",
                    "end": ""
                },
                "1": {
                    "path": "inc_b.py",
                    "args": "-msgsize 65536 -iter 1000",
                    "collect": false,
                    "partition": "1",
                    "start": "0",
                    "end": "f"
                }
            }
        },
        "03_interference_heavy_ring": {
            "description": "Interferenza: A2A vs Ring Non-Blocking (pattern di traffico diverso).",
