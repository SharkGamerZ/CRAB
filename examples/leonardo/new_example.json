                "0": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 1048576 -iter 100",
                    "collect": true,
                    "partition": "0",
                    "start": "0",
                    "end": ""
                },
                "1": {
                    "path": "ring_nb.py",
                    "args": "-msgsize 4096 -iter 500",
                    "collect": false,
                    "partition": "1",
                    "start": "0",
                    "end": "f"
                }
            }
        },
        "04_collective_mix": {
            "description": "Mix di collettive: ARDC seguito da BDC (Binomial Doubling).",
            "apps": {
                "0": {
                    "path": "ardc_b.py",
                    "args": "-msgsize 2048 -iter 100",
                    "collect": true,
                    "partition": "0",
                    "start": "0",
                    "end": ""
                },
                "1": {
                    "path": "bdc_b.py",
                    "args": "-msgsize 2048 -iter 100",
                    "collect": true,
                    "partition": "0",
                    "start": "s0",
                    "end": ""
                }
            }
        },
        "05_long_run_override": {
            "description": "Test sovrascrittura SBATCH: Richiede 30 minuti espliciti.",
            "sbatch_directives": {
                "time": "00:30:00",
                "job-name": "crab_long_run"
            },
            "apps": {
                "0": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 16777216 -iter 20",
                    "collect": true,
                    "partition": "0",
                    "start": "0",
                    "end": ""
                },
                "1": {
                    "path": "a2a_b.py",
                    "args": "-msgsize 16777216 -iter 1000",
